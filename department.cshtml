<!DOCTYPE html>
@using System.Data;
@using System.Data.SqlClient;
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<script>
    function func() {
        window.location.href = "dept_reg.cshtml";
    };
</script>
<html>
<head>
    <title></title>
    <style>
        a:hover {
            background-color: #fafafa;
            text-decoration: none !important;
        }
    </style>
</head>
<body>
    @RenderPage("navbar.cshtml")
    <div class="container-fluid">
        <!--This is a comment. Comments are not displayed in the browser-->
        <div class="col-md-9">
            <div style="width:100%;height:101px;border-width:1px;border-bottom-style:double;border-bottom-color:#eeeeee">
                <h2 style="margin-left:30%;color:#373e4a"> Hospital Managment  System</h2>
                <a style="color:black;margin-left:90%" href="~/logout.cshtml"> Logout <img style="width:20px;height:20px" src="css/logout.png" /> </a>
            </div>
            <div style="margin-top:20px"></div>
            <img src="css/right.png" style="display:inline; width:25px;height:25px" /> <h4 style="display:inline">Department</h4>
            <button type="button" onclick="func()" class="btn btn-primary" style="float:right">Add Department</button>
            <div style="display:inline" class="container">
                <table style="color:#a7a7a7; margin-top:20px" class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="width:300px">Department Name</th>
                            <th style="width:500px">Description</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var connection = new SqlConnection("Data Source=SHAGOR;Initial Catalog=hospital_managment_system;Integrated Security=True;Pooling=False");
                            var cmd = connection.CreateCommand();
                            connection.Open();
                            cmd.CommandText = "select *  from department";
                            var row = cmd.ExecuteReader();
                            while (row.Read())
                            {
                                var name = row["dept_name"];
                                var des = row["dept_description"];
                                <tr> <td>@name</td> <td>@des</td> </tr>
                            }
                            connection.Close();
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>